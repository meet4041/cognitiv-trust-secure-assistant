{
  "name": "cognitiv-meet-ok",
  "displayName": "Cognitiv Secure Code Assistant",
  "description": "Detects and fixes insecure code patterns using Semgrep.",
  "version": "0.0.1",
  "publisher": "meetgandhi",
  "engines": {
    "vscode": "^1.80.0"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished",
    "onSaveTextDocument",
    "onCommand:cognitiv.scanCode"
  ],
  "contributes": {
    "commands": [
      {
        "command": "cognitiv.scanCode",
        "title": "Cognitiv: Scan Code for Security Issues"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.3.0"
  }
}
