{
  "name": "Cognitiv-Trust-Secure-Assistant",
  "displayName": "Cognitiv Trust Secure Assistant",
  "description": "Detects and fixes insecure code patterns using Semgrep.",
  "version": "1.0.0",
  "publisher": "meet4041",
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished",
    "onSaveTextDocument",
    "onCommand:cognitiv.scanCode"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/meet4041/cognitiv-trust-secure-assistant"
  },
  "contributes": {
    "commands": [
      {
        "command": "cognitiv.scanCode",
        "title": "Cognitiv: Scan Code for Security Issues"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.3.0"
  }
}
